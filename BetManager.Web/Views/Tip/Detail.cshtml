                      </div>
                      <div class="progress-bar @(Model.Draw > Model.Home && Model.Draw > Model.Away ? "progress-bar-success" : Model.Draw < Model.Home && Model.Draw < Model.Away ? "progress-bar-danger" : "progress-bar-warning")" style="width: @Model.Draw.ToString("##", ViewBag.EnCulture)%">
                        <span>@Html.DisplayFor(model => model.Draw) %</span>
                      </div>
                      <div class="progress-bar @(Model.Away > Model.Draw && Model.Away > Model.Home ? "progress-bar-success" : Model.Away < Model.Draw && Model.Away < Model.Home ? "progress-bar-danger" : "progress-bar-warning")" style="width: @Model.Away.ToString("##",ViewBag.EnCulture)%">
