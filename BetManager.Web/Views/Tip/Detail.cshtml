                      </div>
                      <div class="progress-bar @(Model.DrawPercent > Model.HomePercent && Model.DrawPercent > Model.AwayPercent ? "progress-bar-success" : Model.DrawPercent < Model.HomePercent && Model.DrawPercent < Model.AwayPercent ? "progress-bar-danger" : "progress-bar-warning")" style="width: @Model.DrawPercent.ToString("##",ViewBag.EnCulture)%">
                        <span>@Html.DisplayFor(model => model.DrawPercent) %</span>
                      </div>
                      <div class="progress-bar @(Model.AwayPercent > Model.DrawPercent && Model.AwayPercent > Model.HomePercent ? "progress-bar-success" : Model.AwayPercent < Model.DrawPercent && Model.AwayPercent < Model.HomePercent ? "progress-bar-danger" : "progress-bar-warning")" style="width: @Model.AwayPercent.ToString("##",ViewBag.EnCulture)%">
                        <span>@Html.DisplayFor(model => model.AwayPercent) %</span>
                      </div>
                    </div>
                  </div>
