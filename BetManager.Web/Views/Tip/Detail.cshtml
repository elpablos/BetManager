                      </div>
                      <div class="progress-bar @(Model.OneAndHalfPlus > Model.OneAndHalfMinus ? "progress-bar-success" : "progress-bar-danger")" style="width: @Model.OneAndHalfPlus.ToString("##",ViewBag.EnCulture)%">
                        <span>@Html.DisplayFor(model => model.OneAndHalfPlus) %</span>
                      </div>
                    </div>
                    <label>2.5- / 2.5+</label>
                    <div class="progress input-group-lg">
                      <div class="progress-bar @(Model.TwoAndHalfMinus > Model.TwoAndHalfPlus ? "progress-bar-success" : "progress-bar-danger")" style="width: @Model.TwoAndHalfMinus.ToString("##",ViewBag.EnCulture)%">
                        <span>@Html.DisplayFor(model => model.TwoAndHalfMinus) %</span>
                      </div>
                      <div class="progress-bar @(Model.TwoAndHalfPlus > Model.TwoAndHalfMinus ? "progress-bar-success" : "progress-bar-danger")" style="width: @Model.TwoAndHalfPlus.ToString("##",ViewBag.EnCulture)%">
