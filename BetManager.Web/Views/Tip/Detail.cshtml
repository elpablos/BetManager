                <div class="row">
                  <div class="col-md-12">
                    <label>Odhady</label>
                    <div class="progress input-group-lg">
                      <div class="progress-bar @(Model.Home > Model.Draw && Model.Home > Model.Away ? "progress-bar-success" : Model.Home < Model.Draw && Model.Home < Model.Away ? "progress-bar-danger" : "progress-bar-warning")" style="width: @Model.Home.ToString("##", ViewBag.EnCulture)%">
