@model IEnumerable<BetManager.Web.Controllers.Tips.List.TipListItemViewModel>


<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <table id="example" class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th class="all">
            @Html.DisplayNameFor(model => model.DisplayName)
          </th>
          <th class="min-tablet-p">
            @Html.DisplayNameFor(model => model.DateStart)
          </th>
          <th class="all">
            @Html.DisplayNameFor(model => model.Home)
          </th>
          <th class="all">
            @Html.DisplayNameFor(model => model.Draw)
          </th>
          <th class="all">
            @Html.DisplayNameFor(model => model.Away)
          </th>
          <th class="never">
            @Html.DisplayNameFor(model => model.HomeOdd)
          </th>
          <th class="never">
            @Html.DisplayNameFor(model => model.DrawOdd)
          </th>
          <th class="never">
            @Html.DisplayNameFor(model => model.AwayOdd)
          </th>
          <th class="min-desktop">
            @Html.DisplayNameFor(model => model.FirstValue)
          </th>
          <th class="min-desktop">
            @Html.DisplayNameFor(model => model.Xvalue)
          </th>
          <th class="min-desktop">
            @Html.DisplayNameFor(model => model.SecondValue)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Category)
          </th>
          <th class="min-tablet-l">
            @Html.DisplayNameFor(model => model.PredictTip)
          </th>
          <th class="min-tablet-p">
            @Html.DisplayNameFor(model => model.Odd)
          </th>
          <th class="never">
            @Html.DisplayNameFor(model => model.WinnerCode)
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
            <tr>
              <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.DateStart)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.Home)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.Draw)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.Away)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.HomeOdd)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.DrawOdd)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.AwayOdd)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.FirstValue)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.Xvalue)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.SecondValue)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.Category)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.PredictTip)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.Odd)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.WinnerCode)
              </td>
              <td>
                @Html.ActionLink("Detail", "Detail", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-primary" })
              </td>
            </tr>
        }
      </tbody>
    </table>
  </div>
</div>
