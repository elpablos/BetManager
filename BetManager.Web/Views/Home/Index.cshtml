@model IEnumerable<BetManager.Core.DbModels.Tip>

@{
    ViewBag.Title = "Tipy";
}

<h2>@ViewBag.Title</h2>

<table id="example" class="table table-striped table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <td>
        @Html.DisplayNameFor(model => model.DisplayName)
      </td>
      <td>
        @Html.DisplayNameFor(model => model.DateStart)
      </td>
      <td>
        @Html.DisplayNameFor(model => model.Form)
      </td>
      <td>
        @Html.DisplayNameFor(model => model.Odd)
      </td>
      <td></td>
    </tr>

  </thead>
  <tbody>
    @foreach (var item in Model)
    {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.DateStart)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Form)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Odd)
          </td>
          <td>
            @Html.ActionLink("Detail", "Detail", new { id = item.ID })
          </td>
        </tr>

    }
  <tbody>
</table>

@section scripts {
  <script type="text/javascript">
      $(document).ready(function () {
          $('#example').DataTable({ responsive: true });
      });
  </script>
}

