<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - BetManager</title>
  @Styles.Render("~/Content/css")
  @Styles.Render("~/Content/datatables")
  @Styles.Render("~/Content/metisMenu")
  @Styles.Render("~/Content/sb")
  @Styles.Render("~/Content/font-awesome")
  @Scripts.Render("~/bundles/modernizr")

  <script>
      (function (i, s, o, g, r, a, m) {
          i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
              (i[r].q = i[r].q || []).push(arguments)
          }, i[r].l = 1 * new Date(); a = s.createElement(o),
          m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
      })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

      ga('create', 'UA-72854012-3', 'auto');
      ga('send', 'pageview');

  </script>
</head>
<body>
  <div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        @Html.ActionLink("BetManager", "Index", "Home", new { @class = "navbar-brand" })
        @*<a class="navbar-brand" href="index.html">BetManager</a>*@
      </div>
      <!-- /.navbar-header -->
      <ul class="nav navbar-top-links navbar-right">
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
          </a>
          <ul class="dropdown-menu dropdown-user">
            <li>
              <a href="@Url.Action("Detail", "Account")"><i class="fa fa-user fa-fw"></i> Profil</a>
            </li>
            <li class="divider"></li>
            <li>
              <a href="@Url.Action("Logout", "Account")"><i class="fa fa-sign-out fa-fw"></i> Odhlásit</a>
            </li>
          </ul>
          <!-- /.dropdown-user -->
        </li>
        <!-- /.dropdown -->
      </ul>
      <!-- /.navbar-top-links -->
      <div class="navbar-default sidebar" role="navigation">
        <div class="sidebar-nav navbar-collapse">
          <ul class="nav" id="side-menu">
            <li>
              <a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
            </li>
            <li>
              <a href="@Url.Action("Index", "Tip")"><i class="fa fa-soccer-ball-o fa-fw"></i> Tipy</a>
            </li>
          </ul>
        </div>
        <!-- /.sidebar-collapse -->
      </div>
      <!-- /.navbar-static-side -->
    </nav>
    <div id="page-wrapper">
      @RenderBody()
      <hr />
      <footer class="pull-right">
        <p>&copy; @DateTime.Now.Year - &copy; lorenzo.cz (@ViewContext.Controller.GetType().Assembly.GetName().Version)</p>
      </footer>
    </div>
  </div>
  <!-- /#wrapper -->

  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @Scripts.Render("~/bundles/datatables")
  @Scripts.Render("~/bundles/metisMenu")
  @Scripts.Render("~/bundles/sb")

  @RenderSection("scripts", required: false)
</body>
</html>
