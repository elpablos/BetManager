@model BetManager.Web.Controllers.Accounts.Detail.DetailAccountViewModel

@{
    ViewBag.Title = "Profil";
}

<div class="row">
    <h2>@ViewBag.Title</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)

    <div class="row">
        @if (@ViewBag.Message != null)
        {
            @Html.Raw(string.Format("<div class=\"alert alert-success\" role=\"alert\">{0}</div>", ViewBag.Message))
        }
    </div>

    <div class="form-horizontal">

        <div class="form-group">
            <label class="col-md-4 control-label">@Html.DisplayNameFor(model => model.UserName)</label>
            <div class="col-md-8">
                <p class="form-control-static">
                    @Html.ValueFor(model => model.UserName)
                </p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">@Html.DisplayNameFor(model => model.LastLogin)</label>
            <div class="col-md-8">
                <p class="form-control-static">
                    @Html.ValueFor(model => model.LastLogin)
                </p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Odd, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Odd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Odd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Form, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Form, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Form, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.ActionLink("Dashboard", "Index", "Home", new { @class = "btn btn-default" })
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
        

    </div>
}